<div class="container" style="margin-top: 3%;">
    <div class="row">
        <div class="col-md-3">
            <label style="font-size: 20px; display:flex ; align-items: center;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-fill"
                 viewBox="0 0 16 16">
                <path d="M2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                
                </svg>
                &nbsp;會議列表
            </label>
        </div>
        <div class="col-md-4">
            {{!-- 顯示 flash 訊息 --}}
            {{> message }}
        </div>
        <div class="col-md-3">
            <ul class="nav justify-content-end">
                <li class="nav-item" style="color:#007bff;">
                    <a class="nav-link active" aria-current="page" href="/">參與</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/chair">主持</a>
                </li>
            </ul>
        </div>
        <div class="col-md-2 text-right">
            <a href="" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#NewMeetingModal">&#10010;
                舉辦會議
            </a>
        </div>
    </div>
</div>

<div class="w3-container">
    <div style="margin-bottom :7%">
        <div style="margin:0 5%; text-align: center">
            <table class="table conf-table">
                <thead>
                    <tr>
                        <th scope="col">會議名稱</th>
                        <th scope="col">開始時間</th>
                        <th scope="col">結束時間</th>
                        <th scope="col">地點</th>
                        <th scope="col">參與身分</th>
                        <th scope="col">與會模式</th>
                        <th scope="col">主持人審核</th>
                        <th scope="col">場地審核</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each confsData}}
                    <tr onclick="tableClick('{{this.confData._id}}')">
                        <td>{{this.confData.name}}</td>
                        <td>{{this.confData.startTime}}</td>
                        <td>{{this.confData.endTime}}</td>
                        <td>{{this.confRoomData.name}}</td>
                        <td>{{{getAttendType this.attendData.attendType}}}</td>
                        <td>{{#getAttendMode this.attendData.attendMode}}{{/getAttendMode}}</td>
                        <td>{{{getSign this.confData.isChairSign}}}</td>
                        <td>{{{getSign this.confData.isRoomSign}}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{!-- 判斷有無會議 --}}
            {{#if confsData}}
            {{else}}
            {{!-- 沒有會議 --}}
            尚無會議
            {{/if}}
        </div>
    </div>
</div>

{{>newConfModal}}